<div class="page-header">
  <strong><%= @bounce_mail.recipient %></strong>
  <% if @bounce_mail.whitelisted %>
    <span class="label label-success">Whitelisted</span>
  <% end %>
</div>

<section>
  <div class="col-sm-12">
    <table class="table">
      <thead>
        <tr>
          <th class="x-tight">Timestamp</th>
          <th class="x-tight">Reason</th>
          <th class="tight">Senderdomain</th>
          <th>Subject</th>
          <th>Diagnosticcode</th>
        </tr>
      </thead>

      <tbody>
        <% @history.each do |bounce_mail| %>
          <tr>
            <td><%= bounce_mail.timestamp.strftime('%-m/%-d %-H:%M') %></td>
            <td><%= bounce_mail.reason %></td>
            <td><%= bounce_mail.senderdomain %></td>
            <td><%= bounce_mail.subject %></td>
            <td><%= bounce_mail.diagnosticcode %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</section>

<section>
  <div class="col-sm-12">
    <%= link_to admin_index_path do %>
      <span class="glyphicon glyphicon-chevron-left"></span>
      Back
    <% end %>
    <% unless @bounce_mail.whitelisted %>
      &nbsp;
      <%= link_to whitelist_mails_register_path(
            'whitelist_mail[recipient]': @bounce_mail.recipient, 'whitelist_mail[senderdomain]': @bounce_mail.senderdomain, ),
            method: :post, data: { confirm: "Are you sure you want to register '#{@bounce_mail.recipient}' to white list?" } do %>
        <span class="glyphicon glyphicon-ok"></span>
        Whitelist
      <% end %>
    <% end %>
    &nbsp;
    <%= link_to admin_path(@bounce_mail), method: :delete, data: { confirm: "Are you sure to delete '#{@bounce_mail.recipient} from bounce list?" } do %>
      <span class="glyphicon glyphicon-remove"></span>
      Destroy
    <% end %>
  </div>
</section>
