<div class="page-header">
  <strong>Whitelist Mails</strong>
</div>

<section>
  <div class="col-md-12">
    <table class="table">
      <thead>
        <tr>
          <th>Recipient</th>
          <th class="x-tight"></th>
        </tr>
      </thead>

      <tbody>
        <% @whitelist_mails.each do |whitelist_mail| %>
          <tr>
            <td><%= whitelist_mail.recipient %></td>
            <td>
              <%= link_to whitelist_mail, method: :delete, data: { confirm: 'Are you sure?' } do %>
                <span class="glyphicon glyphicon-remove"></span>
                Destroy
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= button_to 'New Whitelist Mail', new_whitelist_mail_path, method: 'get', class: 'btn btn-primary' %>
  </div>
</section>
